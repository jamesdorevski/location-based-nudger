{
	"name": "Get IP Address",
	"version": "1.0",
	"description": "Returns current user's public IP address",
    "permissions": [ 
        "declarativeContent", 
        "storage", 
        "tabs", 
        "webRequest", 
        "webRequestBlocking",
        "*://*.facebook.com/*",
        "*://*.twitter.com/*"
    ],
    "background": {
        "scripts": [
            "lib/sqljs-wasm/sql-wasm.js",
            "js/dbSetup.js",
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "content_scripts": [
        {
            "matches": [ "*://*.facebook.com/*", "*://*.twitter.com/*" ],
            "js": [ "js/blockSite.js" ]
        }
    ],
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "html/nudge-site.html"
    ],
	"manifest_version": 2
}
